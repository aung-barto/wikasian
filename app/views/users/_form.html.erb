<%= form_for(@user, html: {class: 'pure-form pure-form-aligned user_form'}) do |f| %>
	<div class="pure-control-group">
		<label>Name</label>
		<%= f.text_field :name, placeholder: 'John Appleseed' %>
	</div>
	<div class="pure-control-group">
		<label>Email</label>
		<%= f.email_field :email, placeholder: 'email@email.com' %>
	</div>
	<div class="pure-control-group">
		<label>Image URL</label>
		<%= f.text_field :u_img, placeholder: 'Profile Image URL' %>
	</div>
	<div class="pure-control-group">
		<label>Location</label>
		<%= f.text_field :location, placeholder: 'Long Beach, CA' %>
	</div>
	<div class="pure-controls">
		<%= f.submit class: 'pure-button pure-button-primary' %>
	</div>
<% end %>