<h2 class='new'>New Article</h2>
<%= form_for(@article, html: {class: 'pure-form pure-form-aligned'}) do |f| %>
	<div class="pure-control-group">
		<label>Title</label>
		<%= f.text_field :title, placeholder: 'Title' %>
	</div>
	<div class="pure-control-group">
		<label>Image URL</label>
		<%= f.url_field :img_url, placeholder: 'Image URL' %>
	</div>
	<div class="pure-control-group">
		<label>Content</label>
		<%= f.text_area :content, placeholder: 'Content' %>
	</div>
	<div class="pure-control-group authors">
		<label>Author</label>
		<%= collection_select(:article, :user_id, User.all, :id, :name) %>
	</div>
	<div class="pure-controls">
		<%= f.submit class: "pure-button-primary pure-button" %>
	</div>
<% end %>